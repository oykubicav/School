<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        bodyx {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .headerx {
            background-color: #fff;
            padding: 10px 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

        .containerx {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .logox a {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            text-decoration: none;
        }

        .nav-menux ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
        }

        .nav-menux ul li a {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            text-decoration: none;
            padding: 10px;
            transition: color 0.3s;
        }

        .nav-menux ul li a:hover {
            color: #007bff;
        }

        .header-buttonsx,
        .header-icons {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .header-buttonsx .btn {
            padding: 8px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1rem;
            text-align: center;
            transition: box-shadow 0.3s ease;
            display: inline-block;
            min-width: 120px;
        }

        .header-buttonsx .btn-primary {
            background-color: #ee4962;
            color: #fff;
            border: 2px solid #ee4962;
        }

        .header-buttonsx .btn:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .header-buttonsx .btn-outline {
            background-color: transparent;
            border: 2px solid #8c4ef8;
            color: #8c4ef8;
            border-radius: 5px;
            padding: 8px 20px;
            font-weight: bold;
        }

        .header-buttonsx .btn-outline:hover {
            background-color: #f3ebff;
            color: #8c4ef8;
            border-color: #8c4ef8;
        }

        .header-buttonsx .btn-primary:hover {
            color: #fff;
        }

        .header-icons i {
            font-size: 1.5rem;
            color: #333;
            transition: color 0.3s;
        }

        .header-icons i:hover {
            color: #007bff;
        }

    </style>
      
       
        </head>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bodyx">
<header class="headerx">
    <div class="containerx">
        <div class="logox">
            <a href="@Url.Action("Index", "Home")">4-A Platformu</a>
        </div>
        <nav class="nav-menux">
            <ul>
                <li><a href="#">Ana Menü</a></li>
                <li><a href="#">Hikayeler</a></li>
                <li><a href="@Url.Action("Index", "Ödev", new { area = "Öğretmen" })">Ödevler</a></li>

            </ul>
        </nav>
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="header-buttonsx">
                <a href="@Url.Action("Login", "Account")" class="btn btn-outline">Oturum aç</a>
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Hemen Kaydol</a>
            </div>
        }
        else
        {
            <div class="header-icons">
                
                    <a href="/Identity/Account/Logout" title="Settings">
                    <i class="fas fa-cog"></i>
                </a>
                <a href="@Url.Action("Profile", "UserPage")" title="Profile">
                    <i class="fas fa-user"></i>
                </a>
            </div>
        }
    </div>
</header>
<main>
    @RenderBody()
</main>
<footer>
    <!-- Your footer content -->
</footer>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>