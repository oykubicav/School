<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website</title>
    
    <!-- Include Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
    <style>
        /* Custom styles */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .headerx {
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            padding: 10px 0;
        }

        .logox a {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            text-decoration: none;
        }

        .nav-menux ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 15px;
        }

        .nav-menux ul li a {
            font-size: 1rem;
            font-weight: bold;
            color: #333;
            text-decoration: none;
            padding: 10px;
        }

        .header-icons i {
            font-size: 1.2rem;
            color: #333;
        }

        .header-icons i:hover {
            color: #007bff;
        }
    </style>
</head>
<body>

<!-- Header Section -->
<header class="headerx">
    <div class="container d-flex justify-content-between align-items-center">
        <!-- Logo Section -->
        <div class="logox">
            <a href="@Url.Action("Index", "Home")">4-A Platformu</a>
        </div>

        <!-- Navigation Section -->
        <nav class="nav-menux">
            <ul class="d-flex flex-wrap gap-2">
                <li><a href="@Url.Action("Index", "Home", new { area = "" })">Ana Menü</a></li>
                <li><a href="@Url.Action("blog", "", new { area = "" })">Ders Programı</a></li>
                <li><a href="@Url.Action("Index", "Ödev", new { area = "Öğretmen" })">Ödevler</a></li>
            </ul>
        </nav>

        <!-- Buttons/Icons Section -->
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="d-flex gap-2">
                <a href="/Identity/Account/Login" class="btn btn-outline-secondary">Oturum aç</a>
                <a href="/Identity/Account/SelectRole" class="btn btn-primary">Kaydol</a>
            </div>
        }
        else
        {
            <div class="d-flex align-items-center gap-3">
                <!-- Profile Dropdown -->
                <div class="dropdown">
                    <a href="#" class="profile-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="@Url.Action("Profile", "UserPage", new { area = "" })">Profilim</a></li>
                        <li>
                            <form id="logoutForm" class="d-none" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                @Html.AntiForgeryToken()
                            </form>
                            <a class="dropdown-item" href="javascript:void(0);" id="logoutButton">Çıkış Yap</a>
                        </li>
                    </ul>
                </div>

                <!-- Settings Icon -->
                <a href="#" title="Settings">
                    <i class="fas fa-cog"></i>
                </a>
            </div>
        }
    </div>
</header>

<!-- Main Content Section -->
<main class="container mt-5 pt-5">
    @RenderBody()
</main>



<!-- Logout Script -->
<script>
    document.getElementById("logoutButton").addEventListener("click", function () {
        document.getElementById("logoutForm").submit();
    });
</script>

<!-- Include Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Optional Section Scripts -->
@RenderSection("Scripts", required: false)

</body>
</html>
