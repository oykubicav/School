<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        bodyx {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .headerx {
            background-color: #fff;
           
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            padding: 10px 0;
        }

        .containerx {
            display: flex;
            justify-content: space-between;
            align-items: center;
           
            margin: 0 auto;
            padding-left: 10px;
            padding-right: 30px;
        }

        .logox a {
            margin-left: 0px;
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            text-decoration: none;
        }

        .nav-menux ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
        }

        .nav-menux ul li a {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            text-decoration: none;
            padding: 10px;
            transition: color 0.3s;
        }

        .nav-menux ul li a:hover {
            color: #007bff;
        }

        .header-buttonsx,
        .header-icons {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .header-buttonsx .btn {
            padding: 8px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1.5rem;
            text-align: center;
            transition: box-shadow 0.3s ease;
            display: inline-block;
            min-width: 120px;
        }

        .header-buttonsx .btn-primary {
            background-color: #ee4962;
            color: #fff;
            border: 2px solid #ee4962;
        }

        .header-buttonsx .btn:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .header-buttonsx .btn-outline {
            background-color: white;
            border: 2px solid #f0f0f0;
            color: #333;
            border-radius: 5px;
            padding: 8px 20px;
            font-weight: bold;
        }

        .header-buttonsx .btn-outline:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .header-buttonsx .btn-primary:hover {
            color: #fff;
        }

        .header-icons i {
            font-size: 1.5rem;
            color: #333;
            transition: color 0.3s;
        }

        .header-icons i:hover {
            color: #007bff;
        }
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            left: 20px;
            background-color: #fff;
            min-width: 150px;
            box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }
        .dropdown:hover .dropdown-menu-start {
            left: 0; /* Ensures the dropdown respects 'start' alignment when hovered */
        }
        .dropdown-item {
            color: #333;
            padding: 10px;
            text-decoration: black;
            display: block;
        }

        .dropdown-item:hover {
            background-color: #f1f1f1;
        }

    </style>
      
       
        </head>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bodyx">
<header class="headerx">
    <div class="containerx">
        <div class="logox">
            <a href="@Url.Action("Index", "Home")">4-A Platformu</a>
        </div>
        <nav class="nav-menux">
            <ul>
                <li><a href="@Url.Action("Index", "Home" , new { area = "" })">Ana Menü</a></li>
                <li><a href="@Url.Action("blog", "" , new { area = "" })">Ders Programı</a></li>
                <li><a href="@Url.Action("Index", "Ödev", new { area = "Öğretmen" })">Ödevler</a></li>

            </ul>
        </nav>
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="header-buttonsx">
                <a href="/Identity/Account/Login" class="btn btn-outline">Oturum aç</a>
                <a href="/Identity/Account/Register" class="btn btn-primary">Kaydol</a>
            </div>
        }
        else
        {
            <div class="header-icons">
                <div class="dropdown">
                    <a href="#" class="profile-icon dropdown-toggle">
                        <i class="fas fa-user"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="@Url.Action("Profile", "UserPage", new { area = "" })">Profilim</a></li>
                        <li>
                            <!-- Hidden form for logout -->
                            <form id="logoutForm" class="d-none" asp-area="Identity" asp-page="/Account/Logout" method="post">
                                @Html.AntiForgeryToken()
                            </form>

                            <!-- Logout link in dropdown -->
                            <a class="dropdown-item" href="javascript:void(0);" id="logoutButton">Çıkış Yap</a>
                        </li>
                    </ul>
                </div>
                    <a href="" title="Settings">
                    <i class="fas fa-cog"></i>
                </a>
               
            </div>
        }
    </div>
</header>
<main>
    @RenderBody()
</main>
<footer>
    <!-- Your footer content -->
</footer>
<script>
    document.getElementById("logoutButton").addEventListener("click", function () {
        document.getElementById("logoutForm").submit(); // Submits the hidden logout form
    });
</script>
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>