@model TestIdentityApp.Data.Models.UserProfileViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>@Model.User.UserName's Profile | Ludiflex</title>
    <style>

        body {
            background-color: rgba(245,242,235,255);  /* Background color, adjust as needed */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding-bottom: 0px;
            padding-left: 0px;
            padding-right: 0px;
            box-sizing: border-box;
        }
        
        

        .profile-box {
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
            margin-top: 100px;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 600px; /* Wider box */
            max-width: 90%;
            text-align: center; /* Center align the text */
        }

        .profile-header {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #333; /* Darker text color */
            text-align: center;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 3px solid #2980b9;
            margin-bottom: 20px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .profile-info {
            margin-bottom: 20px;
            color: #34495e;
        }

        .profile-info h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .profile-info p {
            font-size: 1.2rem;
        }

        .section {
            margin-bottom: 30px;
            text-align: left; /* Align section text to the left */
        }

        .section h2 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .section p {
            font-size: 1.2rem;
            color: #34495e;
        }

        .btn-primary {
            background-color: #2980b9;
            color: #fff;
            border-radius: 10px;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 1.2rem;
            cursor: pointer;
            margin-top: 20px;
            display: inline-block;
        }

        .btn-primary:hover {
            background-color: #3498db;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
<div class="profile-box">
    <div class="profile-header">
        <img src="@Url.Content(Model.User.ImageUrl ?? "/images/profiles/default.png")"
             alt="@Model.User.UserName"
             class="profile-image">
        <div class="profile-info">
            <h1>@Model.User.Ad</h1>
            <p><strong>Email:</strong> @Model.User.Email</p>
            <p><strong>Phone:</strong> @Model.User.PhoneNumber</p>
            @if (Model.Roles.Contains("Öğrenci"))
            {
                <a href="@Url.Action("Index", "HikayeÖzeti", new { area = "Öğrenci" })" class="btn btn-primary">Hikayelerim</a>
            
            }
            else if (Model.Roles.Contains("Öğretmen"))
            {
                <a href="@Url.Action("Index", "HikayeÖzeti", new { area = "Öğretmen" })" class="btn btn-primary">Devamını Oku</a>
                <a href="@Url.Action("SelectYıldızÖğrenci", "YıldızÖğrenci", new { area = "Öğretmen" })" class="btn btn-primary">Yıldız Öğrenci Seç</a>
                <a href="@Url.Action("Create", "Ödev", new { area = "Öğretmen" })" class="btn btn-primary">Ödev Oluştur</a>
            }

            else if (Model.Roles.Contains("Veli"))
            {
                <a href="/Parent/Index" class="btn btn-primary">My Kid's Stories</a>
            }
        </div>
    </div>

    <div class="profile-content">
        <div class="section">
            <h2>Contact Information</h2>
            <p><strong>Phone:</strong> @Model.User.PhoneNumber</p>
            <p><strong>Email:</strong> @Model.User.Email</p>
        </div>
        

    </div>
</div>
</body>
</html>
