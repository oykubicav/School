@model TestIdentityApp.Data.Models.UserProfileViewModel

@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>@Model.User.UserName's Profile | Ludiflex</title>
    <style>
        /* Container for the profile */
        .profile-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
            background-color: #f7f9fb;
            border: 3px solid #2980b9;
            border-radius: 10px;
        }

        /* Profile header (image and basic info) */
        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .profile-image {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 3px solid #2980b9;
            margin-right: 20px;
        }

        .profile-info h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .profile-info p {
            font-size: 1.2rem;
            color: #34495e;
        }

        /* Profile content sections */
        .profile-content .section {
            margin-bottom: 30px;
        }

        .section h2 {
            font-size: 1.8rem;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .section p {
            font-size: 1.2rem;
            color: #34495e;
        }

        /* Button styling */
        .btn-primary {
            background-color: #2980b9;
            color: #fff;
            border-radius: 10px;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 1.2rem;
            cursor: pointer;
            margin-top: 20px;
        }

        .btn-primary:hover {
            background-color: #3498db;
        }

        /* Modal for showing stories */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #2980b9;
            width: 80%;
            border-radius: 10px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="profile-container">
        <div class="profile-header">
            <img src="@Url.Content(Model.User.ImageUrl ?? "/images/profiles/default.png")"
                 alt="@Model.User.UserName"
                 class="profile-image">
            <div class="profile-info">
                <h1>@Model.User.Ad</h1>
                <p><strong>Email:</strong> @Model.User.Email</p>
                <p><strong>Phone:</strong> @Model.User.PhoneNumber</p>
                <button class="btn btn-primary" id="show-stories">Show My Stories</button>
            </div>
        </div>

        <div class="profile-content">
            <div class="section">
                <h2>Contact Information</h2>
                <p><strong>Phone:</strong> @Model.User.PhoneNumber</p>
                <p><strong>Email:</strong> @Model.User.Email</p>
            </div>
            <div class="section">
                <h2>Basic Information</h2>
                <!-- Add more information as needed -->
            </div>
        </div>
    </div>
   
    <!-- Modal for showing stories -->
    <div id="storiesModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            if(@Model.Roles.Contains("Öğrenci")){
            <h2>My Stories</h2>}
            if(@Model.Roles.Contains("Öğretmen")){
            <h2>Stories</h2>}
            if(@Model.Roles.Contains("Veli")){
            <h2>My Kid's Stories</h2>}
            <ul id="storiesList">

                @foreach (var story in Model.HikayeOzetleri)
                {
                <li>@story.HikayeAdı - @story.Özet</li>
                }
            </ul>
        </div>
    </div>}
</body>

@section Scripts {
    <script>
        document.getElementById('show-stories').onclick = function () {
            document.getElementById('storiesModal').style.display = 'block';
        }

        document.querySelector('.close').onclick = function () {
            document.getElementById('storiesModal').style.display = 'none';
        }
    </script>
}
