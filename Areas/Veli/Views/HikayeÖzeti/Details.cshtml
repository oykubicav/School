@model TestIdentityApp.Data.Models.HikayeÖzeti
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.HikayeAdı | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245, 242, 235, 255);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 20px;
            margin-top: 100px; /* Reduced margin for better spacing */
            width: 90%; /* Flexible width for responsiveness */
            max-width: 1000px; /* Limit the maximum width */
            box-sizing: border-box;
        }

        .hikaye-details-card {
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 100%; /* Takes the full width of the container */
        }

        .details-title {
            color: #2c3e50;
            font-size: 2rem; /* Adjust font size for responsiveness */
            font-weight: bold;
            margin-bottom: 15px;
            text-align: center;
        }

        .details-text {
            color: #34495e;
            font-size: 1.2rem; /* Smaller font size for better readability */
            margin-bottom: 20px;
            line-height: 1.6;
            text-align: justify; /* Justify the text for better readability */
        }

        .btn-primary {
            background-color: #2980b9;
            color: #fff;
            padding: 10px 20px;
            font-size: 1.2rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            width: 100%; /* Button takes full width on small screens */
            max-width: 200px; /* Restricts max width */
            text-align: center;
        }

        .btn-primary:hover {
            background-color: #3498db;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="hikaye-details-card">
        <h1 class="details-title">@Model.HikayeAdı</h1>
        <p class="details-text">@Model.Özet</p>
        <a href="@Url.Action("Index", "HikayeÖzeti", new { area = "Veli" })" class="btn btn-primary">Geri Dön</a>
    </div>
</div>
</body>
