@model List<TestIdentityApp.Data.Models.HikayeÖzeti>
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Hikayeler | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245, 242, 235, 255);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Container for the entire content */
        .contain {
            display: flex;
            flex-direction: column;
            padding: 20px;
            width: 100%;
            max-width: 1000px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        /* Style for the card */
        .hikaye-card {
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            width: 100%; /* Makes the card take up full width within the container */
        }

        /* Title style */
        .card-title {
            color: #2c3e50;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        /* Text style */
        .card-text {
            color: #34495e;
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        /* Flex container for buttons */
        .button-container {
            display: flex;
            gap: 10px;
        }

        /* Button style */
        .btn {
            padding: 10px 20px;
            font-size: 1.2rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            background-color: #2980b9;
            color: white;
            cursor: pointer;
            width: 100%; /* Make button responsive */
        }

        .btn-primary:hover {
            background-color: #3498db;
        }

        /* Title styling */
        h2.text-primary {
            color: #2c3e50;
            font-size: 2rem;
            margin-bottom: 30px;
            text-align: center;
        }
    </style>
</head>
<body>
<div class="contain">
    <h2 class="text-primary">Çocuğumun Hikayeleri</h2>

    @foreach (var obj in Model)
    {
        <div class="hikaye-card">
            <div class="card-body">
                <h5 class="card-title">@obj.HikayeAdı</h5>
                <p class="card-text">
                    @if (obj.Özet.Length > 100)
                    {
                        var truncatedText = obj.Özet.Substring(0, 100);
                        var lastSpaceIndex = truncatedText.LastIndexOf(" ");
                        if (lastSpaceIndex > 0)
                        {
                            truncatedText = truncatedText.Substring(0, lastSpaceIndex);
                        }
                        @: @truncatedText ...
                    }
                    else
                    {
                        @: @obj.Özet
                    }
                </p>
                
                <div class="button-container">
                    <a href="@Url.Action("Details", "HikayeÖzeti", new { area = "Veli", id = @obj.Id })" class="btn">Devamını Oku</a> 
                </div>
            </div>
        </div>
    }
</div>
</body>
