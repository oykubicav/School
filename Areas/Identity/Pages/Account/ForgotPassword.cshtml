@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifreni Unuttun mu?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>@ViewData["Title"] | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245,242,235,255);  
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .forgot-password-box {
            background-color: rgba(255, 255, 255, 0.9); 
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;  /* Adjust the max width for small screens */
            margin-top: 50px;
        }

        .login-header header {
            font-size: 1.5em;
            margin-bottom: 10px;
            color: #333; 
            text-align: center;
        }

        .input-box {
            margin-bottom: 15px;
        }

        .input-field {
            width: 100%; 
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
        }

        .submit-btn {
            background-color: var(--kappel); 
            color: white;
            border: none;
            padding: 15px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%; 
        }

        .text-danger {
            font-size: 0.9em;
            color: red;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 20px;
            width: 100%;
            max-width: 400px;
        }

        .input-submit {
            text-align: center;
            margin-top: 10px;
        }

        label {
            font-size: 1rem;
            margin-top: 10px;
            text-align: center;
            display: block;
            color: #333;
        }
    </style>
</head>
<body>
<div class="forgot-password-box">
    <div class="login-header">
        <header>@ViewData["Title"]</header>
        <h2>Mail adresini gir.</h2>
    </div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="input-box">
            <input asp-for="Input.Email" class="input-field" autocomplete="username" aria-required="true" placeholder="isim@hotmail.com" required>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="input-submit">
            <button type="submit" class="submit-btn" id="reset-password-submit">Şifreyi Sıfırla</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>
</html>
