@page
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Login | Ludiflex</title>
    <style>

        body {
            background-color: rgba(245,242,235,255);  /* Background color, adjust as needed */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding-bottom: 0px;
            padding-left: 0px;
            padding-right: 0px;
            box-sizing: border-box;
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 400px; /* Adjusted to make the box wider */
            max-width: 90%;
        }

        .login-header header {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #333; /* Darker text color */
            text-align: center;
        }

        .input-box {
            margin-bottom: 15px;
        }

        .input-field {
            width: 100%; /* Full width of the box */
            padding: 15px; /* Adjusted padding for a more substantial input box */
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1.2em; /* Slightly larger font size for better readability */
        }

        .forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .forgot a {
            font-size: 0.9em;
            color: #333;
        }

        .input-submit {
            text-align: center;
        }

        .submit-btn {
            background-color: var(--kappel); /* Button color */
            color: white;
            border: none;
            padding: 15px 20px; /* Adjusted padding for a larger button */
            border-radius: 5px;
            cursor: pointer;
            width: 100%; /* Full width of the box */
        }

        .sign-up-link {
            text-align: center;
            margin-top: 20px;
        }

        .sign-up-link a {
            color: var(--kappel);
            text-decoration: none;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }
</style>
        </head>
<body>
<div class="body-header">
<div class="login-box">
    <div class="login-header">
        <header>Giriş Yap</header>
    </div>

    @if (TempData["Message"] != null)
    {
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
    }
    <form id="account" method="post">
        <div class="input-box">
            <input asp-for="Input.Email" class="input-field" placeholder="Email" autocomplete="username" required>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="input-box">
            <input asp-for="Input.Password" class="input-field" placeholder="Şifre" autocomplete="current-password" required>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="forgot">
            <section>
                <input asp-for="Input.RememberMe" type="checkbox" id="check">
                <label for="check">Beni Hatırla</label>
            </section>
            <section>
                <a id="forgot-password" asp-page="./ForgotPassword">Şifremi Unuttum</a>
            </section>
        </div>
        <div class="input-submit">
            <button type="submit" class="submit-btn" id="login-submit">Giriş Yap</button>
        </div>
    </form>
    <div class="sign-up-link">
        <p>Hesabın yok mu? <a asp-page="./SelectRole" asp-route-returnUrl="@Model.ReturnUrl">Kayıt Ol</a></p>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

</body>
</html>
