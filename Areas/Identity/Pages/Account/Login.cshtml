@page
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Login | Ludiflex</title>
    <style>

        body {
            background-color: rgba(245,242,235,255);  /* Background color */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .login-box {
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 90%; /* Takes up 90% of the screen width */
            max-width: 400px; /* Maximum width for larger screens */
            margin-top: 100px;
            min-height: 500px; /* Adjusted minimum height */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .login-header header {
            font-size: 1.8em;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }

        .input-box {
            margin-bottom: 15px;
        }

        .input-field {
            width: 100%; /* Full width of the box */
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1.2em;
        }

        .forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .forgot a {
            font-size: 0.9em;
            color: #333;
        }

        .input-submit {
            text-align: center;
        }

        .submit-btn {
            background-color: var(--kappel); /* Button color */
            color: white;
            border: none;
            padding: 15px 20px; /* Larger button for touch-friendly size */
            border-radius: 5px;
            cursor: pointer;
            width: 100%; /* Full width of the box */
            font-size: 1.2em; /* Larger text for better readability */
        }

        .sign-up-link {
            text-align: center;
            margin-top: 20px;
        }

        .sign-up-link a {
            color: var(--kappel);
            text-decoration: none;
        }

        .text-danger {
            display: block;
            min-height: 1.5em; /* Reserve space even when there's no error */
            margin-top: 5px;
            font-size: 0.9em;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

    </style>
</head>
<body>
<div class="container">
    <div class="login-box">
        <div class="login-header">
            <header>Giriş Yap</header>
        </div>

        @if (TempData["Message"] != null)
        {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
        }
        <form id="account" method="post">
            <div class="input-box">
                <input asp-for="Input.Email" class="input-field" placeholder="Email" autocomplete="username" required>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Input.Password" class="input-field" placeholder="Şifre" autocomplete="current-password" required>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="forgot">
                <section>
                    <input asp-for="Input.RememberMe" type="checkbox" id="check">
                    <label for="check">Beni Hatırla</label>
                </section>
                <section>
                    <a id="forgot-password" asp-page="./ForgotPassword">Şifremi Unuttum</a>
                </section>
            </div>
            <div class="input-submit">
                <button type="submit" class="submit-btn" id="login-submit">Giriş Yap</button>
            </div>
        </form>
        <div class="sign-up-link">
            <p>Hesabın yok mu? <a asp-page="./SelectRole" asp-route-returnUrl="@Model.ReturnUrl">Kayıt Ol</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

</body>
</html>
