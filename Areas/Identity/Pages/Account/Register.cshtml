@page
@model RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   

    

    <link rel="stylesheet" href="~/css/style.css">
    <title>Register | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245,242,235,255);  /* Background color, adjust as needed */
            display: flex;
            justify-content: center;
            align-items: flex-start;  /* Align items to the top */
            min-height: 100vh;
            margin: 0;
            padding-bottom: 0px;
            padding-left: 0px;
            padding-right: 0px;
            box-sizing: border-box;
        }

        .register-box {
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
            padding: 5px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 500px; /* Wider box */
            max-width: 90%;
            margin-top: 110px;  /* Add a margin at the top to create space between the box and the header */
        }

        .register-header header {
            font-size: 1.5em;
            margin-bottom: 20px;
            color: #333; /* Darker text color */
            text-align: center;
        }

        .input-box {
            margin-bottom: 15px;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
        }

        .profile-icon-wrapper {
            text-align: center;
            margin-bottom: 20px;
        }

        .profile-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            cursor: pointer;
            object-fit: cover;
            border: 2px solid #ccc;
        }

        .profile-icon:hover {
            border-color: var(--kappel);
        }

        .input-submit {
            text-align: center;
        }

        .submit-btn {
            background-color: var(--kappel); /* Button color */
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

        .sign-up-link {
            text-align: center;
            margin-top: 20px;
        }

        .sign-up-link a {
            color: var(--kappel);
            text-decoration: none;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

      

        /* Flexbox for side by side inputs */
        .flex-row {
            display: flex;
            justify-content: space-between;
            gap: 15px;
        }

        .flex-row .input-box {
            flex: 1; /* Make the input boxes take equal space */
        }
    </style>
</head>
<body>
<div class="register-box">
  
    <input type="hidden" asp-for="Input.Role"/>
    <form id="registerForm" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <input type="hidden" asp-for="Input.Role" />
        <div class="form-group">
            <label asp-for="Input.ProfileImage" class="control-label">Profile Image</label>
            <input asp-for="Input.ProfileImage" class="form-control" type="file" />
            <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
        </div>
        <!-- Profile Image Upload with Default Icon -->
      
        <!-- Email -->
        <div class="input-box">
            <input asp-for="Input.Email" class="input-field" placeholder="Email" autocomplete="username" required>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <!-- Profile Image Upload -->
        <!-- Name and Surname side by side -->
        <div class="flex-row">
            <div class="input-box">
                <input asp-for="Input.Name" class="input-field" placeholder="Ad" required>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="Input.Surname" class="input-field" placeholder="Soyad" required>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
        </div>

        <!-- Phone Number -->
        <div class="input-box">
            <input asp-for="Input.PhoneNumber" class="input-field" placeholder="Telefon" required>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        @if (Model.Input.Role == "Veli")
        {
            <div class="input-box">
                <select asp-for="Input.SelectedÖğrencilerIds" asp-items="Model.Input.ÖğrencilerList" class="input-field" multiple>
                    <option disabled selected value="">Öğrenciler</option>
                    <!-- The rest of the options will be rendered here by the asp-items attribute -->
                </select>
                <span asp-validation-for="Input.SelectedÖğrencilerIds" class="text-danger"></span>
            </div>

        }
        <!-- Password and Confirm Password side by side -->
        <div class="flex-row">
            <div class="input-box">
                <input asp-for="Input.Password" class="input-field" placeholder="Şifre" autocomplete="new-password" required>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="input-box">
                <input asp-for="Input.ConfirmPassword" class="input-field" placeholder="Şifreni Onayla" autocomplete="new-password" required>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="input-submit">
            <button type="submit" class="submit-btn" id="registerSubmit">Kayıt Ol</button>
        </div>
    </form>
    <div class="sign-up-link">
        <p>Hesabın Var Mı? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Giriş Yap</a></p>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial"/>
}


</body>
</html>
