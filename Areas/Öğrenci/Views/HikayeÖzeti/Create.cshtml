@model TestIdentityApp.Data.Models.HikayeÖzeti
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Create Hikaye Özeti | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245,242,235,255);  
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .create-container {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 700px;
            padding: 20px;
            box-sizing: border-box;
            margin: 0 auto;
        }

        .create-header {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #2c3e50;
            text-align: center;
        }

        .input-box {
            width: 100%;
            margin-bottom: 20px;
        }

        .input-box label {
            display: block;
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #34495e;
        }

        .text-area, .form-control {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            border: 2px solid #2980b9;
            border-radius: 8px;
            box-sizing: border-box;
        }

        .text-area {
            height: 200px;
            resize: vertical;
        }

        .submit-btn {
            padding: 12px;
            background-color: #2980b9;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1.2rem;
            cursor: pointer;
            width: 100%;
            max-width: 300px;
            margin-top: 20px;
            align-self: center;
        }

        .submit-btn:hover {
            background-color: #3498db;
        }
    </style>
</head>
<body>
    <div class="create-container">
        <header class="create-header">Hikaye Özeti Oluştur</header>
        <input type="hidden" asp-for="ÖğrenciId" />

        <form asp-action="Create" method="post">
            <div class="input-box">
                <label for="HikayeAdı">Hikaye Adı</label>
                <input asp-for="HikayeAdı" class="form-control" id="HikayeAdı" name="HikayeAdı" required>
                <span asp-validation-for="HikayeAdı" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="Özet">Özet</label>
                <textarea asp-for="Özet" class="text-area" id="Özet" name="Özet" required></textarea>
                <span asp-validation-for="Özet" class="text-danger"></span>
            </div>

            <div class="input-box">
                <button type="submit" class="submit-btn">Kaydet</button>
            </div>
        </form>
    </div>
</body>
</html>
