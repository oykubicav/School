@model TestIdentityApp.Data.Models.HikayeÖzeti
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Edit @Model.HikayeAdı | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245, 242, 235, 255);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .create-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .create-header {
            font-size: 2rem;
            margin-bottom: 30px;
            color: #2c3e50;
            text-align: center;
        }

        .input-box {
            width: 100%;
            margin-bottom: 25px;
        }

        .input-box label {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #34495e;
            display: block;
        }

        .text-area {
            width: 100%;
            height: 200px;
            padding: 10px;
            font-size: 1.1rem;
            border: 2px solid #2980b9;
            border-radius: 8px;
            resize: vertical;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1.1rem;
            border: 2px solid #2980b9;
            border-radius: 8px;
        }

        .submit-btn {
            padding: 10px 20px;
            background-color: #2980b9;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1.2rem;
            cursor: pointer;
            width: 100%;
            max-width: 400px;
            text-align: center;
            margin-top: 20px;
        }

        .submit-btn:hover {
            background-color: #3498db;
        }

        .text-danger {
            color: red;
        }

        .small-input {
            width: 100%;
            padding: 10px;
            font-size: 1.2rem;
            border: 2px solid #2980b9;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="create-container">
        <header class="create-header">Düzenle</header> <!-- Same styling as the Create page header -->

        <form asp-controller="HikayeÖzeti" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="input-box">
                <label asp-for="HikayeAdı">Başlık</label>
                <input asp-for="HikayeAdı" class="small-input" id="HikayeAdı" name="HikayeAdı" required />
                <span asp-validation-for="HikayeAdı" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label asp-for="Özet">Özet</label>
                <textarea asp-for="Özet" class="text-area" id="Özet" name="Özet" required>@Model.Özet</textarea>
                <span asp-validation-for="Özet" class="text-danger"></span>
            </div>

            <div class="input-box">
                <button type="submit" class="submit-btn">Kaydet</button>
            </div>

        </form>
    </div>
</body>
</html>
