@model List<TestIdentityApp.Data.Models.HikayeÖzeti>
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Hikayeler | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245, 242, 235, 255);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .contain {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            padding: 20px;
            margin-top: 50px;
            width: 100%;
            max-width: 1200px;
        }

        /* Style for the card */
        .hikaye-card {
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            width: 100%; /* Full width but constrained by max-width */
            max-width: 800px;
        }

        /* Title style */
        .card-title {
            color: #2c3e50;
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        /* Text style */
        .card-text {
            color: #34495e;
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .button-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px; /* Add space between buttons */
        }

        /* Button style */
        .btn {
            padding: 10px 20px;
            font-size: 1.2rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            width: 150px;  
            text-align: center;
        }

        .btn-primary {
            background-color: #2980b9;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #3498db;
        }

        .btn-danger {
            background-color: #e74c3c;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .btn-danger:hover {
            background-color: #c0392b;
        }

        /* Title styling */
        h2.text-primary {
            color: #2c3e50;
            font-size: 2rem;
            margin-bottom: 30px;
            text-align: center;
            width: 100%;
        }

        /* Ensuring cards remain centered and flexible */
        .row {
            width: 100%;
        }

        .col-12 {
            width: 100%;
        }

        /* Flexbox for form buttons to ensure responsiveness */
        form {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
<div class="contain">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Hikayelerim</h2>
        </div>
    </div>

    @foreach (var obj in Model)
    {
        <div class="card mb-4 hikaye-card">
            <div class="card-body">
                <h5 class="card-title">@obj.HikayeAdı</h5>
                <p class="card-text">
                    @if (obj.Özet.Length > 100)
                    {
                        var truncatedText = obj.Özet.Substring(0, 100);
                        var lastSpaceIndex = truncatedText.LastIndexOf(" ");
                        if (lastSpaceIndex > 0)
                        {
                            truncatedText = truncatedText.Substring(0, lastSpaceIndex);
                        }
                        @: @truncatedText ...
                    }
                    else
                    {
                        @: @obj.Özet
                    }
                </p>
                
                <div class="button-container">
                    <a href="@Url.Action("Details", "HikayeÖzeti", new { area = "Öğrenci", id = @obj.Id })" class="btn btn-primary">Devamını Oku</a> 
                    <a href="@Url.Action("Edit", "HikayeÖzeti", new { area = "Öğrenci", id = @obj.Id })" class="btn btn-primary">Düzenle</a>
                    <form action="/Öğrenci/HikayeÖzeti/Delete/@obj.Id" method="post">
                        <input name="__RequestVerificationToken" type="hidden" value="...anti-forgery-token-value...">
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
</body>
