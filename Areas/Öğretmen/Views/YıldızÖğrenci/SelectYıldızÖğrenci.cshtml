@{
    ViewBag.Title = "Yıldız Öğrenci Seç";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: rgba(245, 242, 235, 255);  /* Consistent background */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            padding: 20px;
            width: 100%;
            max-width: 600px; /* Max width to avoid stretching on larger screens */
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #2c3e50;
            font-size: 2rem;
            margin-bottom: 20px;
            text-align: center;
            font-weight: bold;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-size: 1.2rem;
            color: #34495e;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1.1rem;
            border: 2px solid #2980b9;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .text-danger {
            color: red;
        }

        .btn {
            padding: 12px;
            font-size: 1.2rem;
            border-radius: 5px;
            background-color: #2980b9;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 100%; /* Full width for the button */
            margin-top: 15px;
        }

        .btn:hover {
            background-color: #3498db;
        }

    </style>
</head>

<body>
    <div class="form-container">
        <h2>@ViewBag.Title</h2>

        <form asp-action="SelectYıldızÖğrenci" method="post">
            <div class="form-group">
                <label for="SelectedÖğrenciId">Öğrenci</label>
                <select name="selectedÖğrenciId" class="form-control">
                    @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Öğrenciler)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="SelectedÖğrenciId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Hafta">Tarih</label>
                <input name="Hafta" class="form-control" type="date" value="@ViewBag.Hafta" />
                <span asp-validation-for="Hafta" class="text-danger"></span>
            </div>

            <button type="submit" class="btn">Seç</button>
        </form>
    </div>
</body>
