@model List<TestIdentityApp.Data.Models.DersIcerik>
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ders İçerikleri | Ludiflex</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: rgba(245, 242, 235, 255);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Container for the entire content */
        .contain {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            flex-direction: column;
            padding: 20px;
            margin-top: 100px;
            width: 100%;
            max-width: 1200px;
        }

        /* Style for the card */
        .hikaye-card {
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            width: 100%; /* Full width on smaller screens */
            max-width: 800px; /* Max width on larger screens */
        }

        /* Title style */
        .card-title {
            color: #020000;
            font-size: 1.8rem;
            margin-bottom: 15px;
        }

        /* Text style */
        .card-text {
            color: #000000;
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        /* General button styling */
        .btn {
            background-color: #2980b9;
            color: #ffffff;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn:hover {
            background-color: #3498db;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #ffffff;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        /* Title styling */
        h2.text-primary {
            color: #000000;
            font-size: 2.5rem;
            margin-bottom: 30px;
            text-align: center;
            width: 100%;
        }

        /* Additional styling for the page */
        .row {
            width: 100%;
        }

        .col-12 {
            width: 100%;
        }
    </style>
</head>
<body>
<div class="contain">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">@Model.FirstOrDefault()?.DersAdi Materyaller</h2>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
    @foreach (var obj in Model)
    {
    <div class="card mb-4 hikaye-card">
        <div class="card-body">
            <h5 class="card-title">@obj.Konu</h5>
            <p class="card-text">
                @if (!string.IsNullOrEmpty(obj.IcerikFileePath))
                {
                    var files = obj.IcerikFileePath.Split(',');
                    foreach (var file in files)
                    {
                        <strong>Dosya:</strong>
                        <a href="@Url.Content(file)" target="_blank">Dosyayı İndir</a><br />
                    }
                }
            </p>
            @if (User.IsInRole("Öğretmen"))
            {
                <form action="/Öğretmen/DersIcerik/Delete/@obj.Id" method="post">
                    <input name="__RequestVerificationToken" type="hidden" value="...anti-forgery-token-value...">
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            }
        </div>
    </div>
    }
    }
    else
    {
    <p>Bu derse ait materyal bulunmamaktadır.</p>
    }
</div>
</body>
