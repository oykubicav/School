@model List<TestIdentityApp.Data.Models.DersIcerik>
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Ders İçerikleri | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245, 242, 235, 255);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Container for the entire content */
        .contain {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            flex-direction: column;
            padding: 20px;
            margin-top: 100px;
            width: 100%;
            max-width: 1200px;
            overflow-y: auto; /* Allows scrolling if there are too many stories */
        }

        /* Style for the card */
        .hikaye-card {
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            width: 90%; /* Increase the width of the card */
            max-width: 1000px; /* Ensure it doesn't get too wide */
        }

        /* Title style */
        .card-title {
            color: #020000;
            font-size: 1.8rem;
            margin-bottom: 15px;
        }

        /* Text style */
        .card-text {
            color: #000000;
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        /* General button styling */
        .btn {
            background-color: var(--kappel, #000000); /* fallback color if var is not available */
            color: var(--white, #ffffff); /* fallback color if var is not available */
            font-family: var(--ff-league_spartan, Arial, sans-serif); /* fallback font if var is not available */
            font-size: var(--fs-4, 1.2rem); /* fallback font size if var is not available */
            display: flex;
            align-items: center;
            gap: 7px;
            max-width: max-content;
            padding: 10px 20px;
            border-radius: var(--radius-5, 5px); /* fallback radius */
            overflow: hidden;
            position: relative;
            z-index: 1;
        }

        .btn::before {
            content: "";
            position: absolute;
            inset: 0;
            background-image: var(--gradient, linear-gradient(45deg, #cde176, #f06543)); /* fallback gradient */
            z-index: -1;
            border-radius: inherit;
            transform: translateX(-100%);
            transition: transform 0.4s ease;
        }

        .btn:hover::before,
        .btn:focus::before {
            transform: translateX(0);
        }

        .btn-danger {
            background-color: var(--kappel, #dc3545); /* Use your desired fallback color for danger */
            color: var(--white, #ffffff);
        }

        .btn-danger:hover {
            background-color: var(--kappel, #c82333); /* Adjust the hover state as per your preference */
        }

        /* Title styling */
        h2.text-primary {
            color: #000000; /* Black */
            font-size: 2.5rem;
            margin-bottom: 30px;
            text-align: center; /* Center the text */
            /* Make it bold */
            width: 100%;
        }

        /* Additional styling for the page */
        .row {
            width: 100%;
        }

        .col-12 {
            width: 100%;
        }
    </style>
</head>
<body>
<div class="contain">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">@Model.FirstOrDefault()?.DersAdi Materyaller</h2>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
    @foreach (var obj in Model)
    {
    <div class="card mb-4 hikaye-card">
        <div class="card-body">
            <h5 class="card-title">@obj.Konu</h5>
            <p class="card-text">
                @if (!string.IsNullOrEmpty(obj.IcerikFileePath))
                {
                    var files = obj.IcerikFileePath.Split(',');
                    foreach (var file in files)
                    {
                        <strong>Dosya:</strong>
                        <a href="@Url.Content(file)" target="_blank">Dosyayı İndir</a><br />
                    }
                }
            </p>
            @if (User.IsInRole("Öğretmen"))
            {
                <form action="/Öğretmen/DersIcerik/Delete/@obj.Id" method="post">
                    <input name="__RequestVerificationToken" type="hidden" value="...anti-forgery-token-value...">
                    <button type="submit" class="btn  has-before">Sil</button>
                </form>
            }
        </div>
    </div>
    }
    }
    else
    {
    <p>Bu derse ait materyal bulunmamaktadır.</p>
    }
</div>
</body>
