@model TestIdentityApp.Data.Models.DersIcerik
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Create İçerik | Ludiflex</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: rgba(245, 242, 235, 255);  
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .create-container {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 800px;
            padding: 20px;
            margin: 0 auto;
        }

        .create-header {
            font-size: 2rem;
            margin-bottom: 30px;
            color: #2c3e50;
            text-align: center;
        }

        .input-box {
            width: 100%;
            margin-bottom: 20px;
        }

        .input-box label {
            display: block;
            font-size: 1.2rem;
            margin-bottom: 8px;
            color: #34495e;
        }

        .form-control, .text-area {
            width: 100%;
            padding: 10px;
            font-size: 1.1rem;
            border: 2px solid #2980b9;
            border-radius: 8px;
        }

        .text-area {
            height: 150px;
            resize: none;
        }

        .submit-btn {
            padding: 12px;
            background-color: #2980b9;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1.2rem;
            cursor: pointer;
            width: 100%;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #3498db;
        }

        .text-danger {
            color: red;
            font-size: 0.9rem;
        }

    </style>

</head>
<body>
    <div class="create-container">
        <header class="create-header">İçerik Ekle</header>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="input-box">
                <label for="DersAdi">Ders Adı</label>
                <input asp-for="DersAdi" class="form-control" id="DersAdi" name="DersAdi" required>
                <span asp-validation-for="DersAdi" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="Konu">Konu</label>
                <input asp-for="Konu" class="form-control" id="Konu" name="Konu" required>
                <span asp-validation-for="Konu" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label asp-for="IcerikFiles">Ders Dosyası</label>
                <input asp-for="IcerikFiles" class="form-control" name="IcerikFiles" id="IcerikFiles" type="file" multiple />
                <span asp-validation-for="IcerikFiles" class="text-danger"></span>
            </div>

            <div class="input-box">
                <button type="submit" class="submit-btn">Kaydet</button>
            </div>
        </form>
    </div>
</body>
</html>
