@model List<TestIdentityApp.Data.Models.HikayeÖzeti>
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Public Hikayeler | Ludiflex</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: rgba(245, 242, 235, 255);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Container for the entire content */
        .contain {
            display: flex;
            flex-direction: column;
            padding: 20px;
            width: 100%;
            max-width: 1200px; /* Max width for larger screens */
            margin: 0 auto;
        }

        /* Style for the card */
        .hikaye-card {
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            width: 100%;
            max-width: 1000px; /* Prevent the card from being too wide */
        }

        /* Title style */
        .card-title {
            color: #2c3e50;
            font-size: 2rem; /* Responsive title size */
            font-weight: bold;
            margin-bottom: 15px;
        }

        /* Text style */
        .card-text {
            color: #34495e;
            font-size: 1.2rem; /* Slightly smaller for responsiveness */
            margin-bottom: 20px;
        }

        /* Flex container for buttons */
        .button-container {
            display: flex;
            flex-wrap: wrap; /* Allow buttons to wrap on smaller screens */
            gap: 10px; /* Add space between buttons */
            justify-content: center;
        }

        /* Button style */
        .btn {
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            min-width: 120px;   /* Ensures all buttons have the same minimum width */
            text-align: center;
        }

        .btn-primary {
            background-color: #2980b9;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #3498db;
        }

        /* Title styling */
        h2.text-primary {
            color: #2c3e50;
            font-size: 2rem;
            margin-bottom: 30px;
            text-align: center;
            width: 100%;
        }

        /* Additional styling for the page */
        .row {
            width: 100%;
        }

        .col-12 {
            width: 100%;
        }

    </style>
</head>
<body>
<div class="contain">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Hikayeler</h2>
        </div>
    </div>

    @foreach (var obj in Model)
    {
        <div class="card mb-4 hikaye-card">
            <div class="card-body">
                <h5 class="card-title">@obj.HikayeAdı</h5>
                <p class="card-text">
                    @if (obj.Özet.Length > 100)
                    {
                        var truncatedText = obj.Özet.Substring(0, 100);
                        var lastSpaceIndex = truncatedText.LastIndexOf(" ");
                        if (lastSpaceIndex > 0)
                        {
                            truncatedText = truncatedText.Substring(0, lastSpaceIndex);
                        }
                        @: @truncatedText ...
                    }
                    else
                    {
                        @: @obj.Özet
                    }
                </p>
                
                <div class="button-container">
                    <a href="@Url.Action("Details", "HikayeÖzeti", new { area = "Öğretmen", id = @obj.Id })" class="btn btn-primary">Devamını Oku</a> 
                    <a href="@Url.Action("Edit", "HikayeÖzeti", new { area = "Öğretmen", id = @obj.Id })" class="btn btn-primary">Düzenle</a>
                </div>
            </div>
        </div>
    }
</div>
</body>
