@model TestIdentityApp.Data.Models.HikayeÖzeti
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Edit @Model.HikayeAdı | Ludiflex</title>
    <style>
        /* Container for the entire content */
        .container {
            padding-top: 150px; /* Adjust this value to match the layout of other pages */
            max-width: 800px;
            margin: 0 auto; /* Center horizontally */
        }

        /* Title style */
        .edit-title {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        /* Input box styles */
        .input-box {
            width: 100%;
            max-width: 700px;
            margin-bottom: 25px;
        }

        .input-box label {
            display: block;
            font-size: 1.3rem;
            margin-bottom: 10px;
            color: #34495e;
        }

        .text-area, .form-control {
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            border: 3px solid #2980b9;
            border-radius: 10px;
            resize: none;
        }

        .btn-primary {
            background-color: #2980b9;
            color: #fff;
            border-radius: 10px;
            padding: 15px 50px;
            text-decoration: none;
            font-size: 1.3rem;
            cursor: pointer;
            width: 400px;
            max-width: 400px;
            margin-top: 20px;
            text-align: center;
        }

        .btn-primary:hover {
            background-color: #3498db;
        }

        .btn-secondary {
            background-color: #95a5a6;
            color: #fff;
            border-radius: 10px;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 1.2rem;
            cursor: pointer;
            margin-right: 10px;
        }

        .btn-secondary:hover {
            background-color: #7f8c8d;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="edit-title">Edit @Model.HikayeAdı</h1>

    <form asp-action="Edit" method="post">
       
        <div class="input-box">
            <label asp-for="Özet">Özet</label>
            <textarea asp-for="Özet" class="text-area" required>@Model.Özet</textarea>
            <span asp-validation-for="Özet" class="text-danger"></span>
        </div>

        <div class="input-box">
            <label asp-for="Tarih">Tarih</label>
            <input asp-for="Tarih" class="form-control" type="date" required>
            <span asp-validation-for="Tarih" class="text-danger"></span>
        </div>

        <div class="input-box">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
        </div>
        
    </form>
    
</div>
</body>

