@model TestIdentityApp.Data.Models.HikayeÖzeti
@{
    Layout = "_Layout";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.HikayeAdı | Ludiflex</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: rgba(245, 242, 235, 255);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 20px;
            width: 100%;
            max-width: 1200px;
        }

        .hikaye-details-card {
            border: 2px solid #2980b9;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 100%;
            max-width: 800px; /* Restricts the card's maximum width */
            margin-bottom: 20px;
        }

        .details-title {
            color: #2c3e50;
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 15px;
            text-align: center;
            word-wrap: break-word; /* Ensures text wraps on small screens */
        }

        .details-text {
            color: #34495e;
            font-size: 1.5rem;
            margin-bottom: 20px;
            line-height: 1.6;
            word-wrap: break-word;
        }

        .btn-primary {
            background-color: #2980b9;
            color: #fff;
            padding: 10px 20px;
            font-size: 1.2rem;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            width: 100%; /* Button takes full width on smaller screens */
            max-width: 200px; /* Button will not exceed 200px in width */
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #3498db;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="hikaye-details-card">
        <h1 class="details-title">@Model.HikayeAdı</h1>
        <p class="details-text">@Model.Özet</p>
        <a href="@Url.Action("Index", "HikayeÖzeti", new { area = "Öğretmen" })" class="btn btn-primary">Geri Dön</a>
    </div>
</div>
</body>
