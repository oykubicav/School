@model TestIdentityApp.Data.Models.HikayeÖzeti
@{

Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Create Hikaye Özeti | Ludiflex</title>
    <style>
        .create-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        .create-header {
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: #2c3e50;
            text-align: center;
        }

        .input-box {
            width: 100%;
            max-width: 700px;
            margin-bottom: 25px;
        }

        .input-box label {
            display: block;
            font-size: 1.3rem;
            margin-bottom: 10px;
            color: #34495e;
        }

        .text-area {
            width: 400px;
            height: 400px;
            padding: 20px;
            font-size: 1.2rem;
            border: 3px solid #2980b9;
            border-radius: 10px;
            resize: none;
        }

        .form-control {
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            border: 3px solid #2980b9;
            border-radius: 10px;
        }

        .submit-btn {
            padding: 15px 50px;
            background-color: #2980b9;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1.3rem;
            cursor: pointer;
            width: 400px;
            max-width: 400px;
            margin-top: 20px;
            text-align: center;
        }

        .submit-btn:hover {
            background-color: #3498db;
        }
        body {
            margin-top: 150px; /* Adjust this value to match the height of your navbar */
        }

    </style>

</head>
<body>
    <div class="create-container">
        <header class="create-header">Hikaye Özeti Oluştur</header>

        <form asp-action="Create" method="post">
            <div class="input-box">
                <label for="HikayeAdı">Hikaye Adı</label>
                <input asp-for="HikayeAdı" class="form-control" id="HikayeAdı" name="HikayeAdı" required>
                <span asp-validation-for="HikayeAdı" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="Özet">Özet</label>
                <textarea asp-for="Özet" class="text-area" id="Özet" name="Özet" required></textarea>
                <span asp-validation-for="Özet" class="text-danger"></span>
            </div>

            

            <div class="input-box">
                <button type="submit" class="submit-btn">Kaydet</button>
            </div>
        </form>

    </div>

   
</body>
</html>
