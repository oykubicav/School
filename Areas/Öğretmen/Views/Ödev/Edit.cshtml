@model TestIdentityApp.Data.Models.Ödev
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>Edit @Model.Başlık | Ludiflex</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: rgba(245, 242, 235, 255);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .create-container {
            display: flex;
            flex-direction: column;
            padding: 20px;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
        }

        .create-header {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #2c3e50;
            text-align: center;
        }

        .input-box {
            width: 100%;
            margin-bottom: 15px;
        }

        .input-box label {
            display: block;
            font-size: 1.2rem;
            margin-bottom: 5px;
            color: #34495e;
        }

        .text-area {
            width: 100%;
            height: 200px;
            padding: 10px;
            font-size: 1rem;
            border: 2px solid #2980b9;
            border-radius: 10px;
            resize: none;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 2px solid #2980b9;
            border-radius: 10px;
        }

        .submit-btn {
            padding: 12px 20px;
            background-color: #2980b9;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1.2rem;
            cursor: pointer;
            width: 100%;
            text-align: center;
            margin-top: 20px;
        }

        .submit-btn:hover {
            background-color: #3498db;
        } 

        .text-danger {
            color: red;
        }

        .small-input {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 2px solid #2980b9;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="create-container">
        <header class="create-header">Düzenle</header> <!-- Same styling as the Create page header -->

        <form asp-controller="Ödev" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="input-box">
                <label asp-for="Başlık">Başlık</label>
                <input asp-for="Başlık" class="small-input" id="Başlık" name="Başlık" required />
                <span asp-validation-for="Başlık" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label asp-for="İçerik">Özet</label>
                <textarea asp-for="İçerik" class="text-area" id="İçerik" name="İçerik" required>@Model.İçerik</textarea>
                <span asp-validation-for="İçerik" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="Hafta"></label>
                <input name="Hafta" class="form-control" type="date" value="@ViewBag.Hafta" />
                <span asp-validation-for="Hafta" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="HomeworkFile">Ödev Dosyaları</label>

                @if (!string.IsNullOrEmpty(Model.HomeworkFilePath))
                {
                    <!-- Show each existing file with a delete checkbox -->
                    var existingFiles = Model.HomeworkFilePath.Split(',');
                    foreach (var file in existingFiles)
                    {
                    <div>
                        <strong>Mevcut Dosya:</strong>
                        <a href="@Url.Content(file)" target="_blank">Mevcut Dosyayı Görüntüle</a>
                        <input type="checkbox" name="DeleteFiles" value="@file" /> Bu dosyayı sil
                    </div>
                    }
                }

                <!-- Allow uploading multiple new files -->
                <input name="HomeworkFile" id="HomeworkFile" class="form-control" type="file" multiple />
                <span asp-validation-for="HomeworkFile" class="text-danger"></span>
            </div>

            <div class="input-box">
                <button type="submit" class="submit-btn">Kaydet</button>
            </div>

        </form>
    </div>
</body>
</html>
