@model TestIdentityApp.Data.Models.Ödev
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Create Ödev | Ludiflex</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background-color: rgba(245, 242, 235, 255);  /* Background color */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            font-family: Arial, sans-serif;
        }

        .create-container {
            display: flex;
            flex-direction: column;
            padding: 20px;
            width: 90%;  /* Takes up 90% of the screen width */
            max-width: 600px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .create-header {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #2c3e50;
            text-align: center;
        }

        .input-box {
            margin-bottom: 20px;
            width: 100%;
        }

        .input-box label {
            display: block;
            font-size: 1.2rem;
            margin-bottom: 8px;
            color: #34495e;
        }

        .form-control,
        .text-area {
            width: 100%;  /* Full width for input fields */
            padding: 10px;
            font-size: 1rem;
            border: 2px solid #2980b9;
            border-radius: 8px;
        }

        .text-area {
            height: 150px;
            resize: none;
        }

        .submit-btn {
            padding: 12px 20px;
            background-color: #2980b9;
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1.2rem;
            cursor: pointer;
            width: 100%;  /* Full width for submit button */
            text-align: center;
        }

        .submit-btn:hover {
            background-color: #3498db;
        }

        .text-danger {
            color: red;
        }

        body {
            margin-top: 150px; /* Adjust this value to match the height of your navbar */
        }

    </style>

</head>
<body>
    <div class="create-container">
        <header class="create-header">Ödev Oluştur</header>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="input-box">
                <label for="Başlık">Ödev Adı</label>
                <input asp-for="Başlık" class="form-control" id="Başlık" name="Başlık" required>
                <span asp-validation-for="Başlık" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="İçerik">İçerik</label>
                <textarea asp-for="İçerik" class="text-area" id="İçerik" name="İçerik" required></textarea>
                <span asp-validation-for="İçerik" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="Hafta">Tarih</label>
                <input name="Hafta" class="form-control" type="date" value="@ViewBag.Hafta" />
                <span asp-validation-for="Hafta" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="HomeworkFile">Ödev Dosyası</label>
                <input asp-for="HomeworkFile" class="form-control" name="HomeworkFile" id="HomeworkFile" type="file" multiple />
                <span asp-validation-for="HomeworkFile" class="text-danger"></span>
            </div>

            <div class="input-box">
                <button type="submit" class="submit-btn">Kaydet</button>
            </div>
        </form>
    </div>
</body>
</html>
