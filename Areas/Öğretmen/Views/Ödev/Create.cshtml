@model TestIdentityApp.Data.Models.Ödev
@{

Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Create Ödev | Ludiflex</title>
    <style>
        body {
            background-color: rgba(245,242,235,255);  /* Background color, adjust as needed */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding-bottom: 0px;
            padding-left: 0px;
            padding-right: 0px;
            box-sizing: border-box;
        }

        .create-container {
            display: flex;
          
         
            flex-direction: column;
            height: 100vh;
            padding: 0;
            max-width: 800px;
            margin: 0 auto;
        }

        .create-header {
            font-size: 2.5rem;
            margin-bottom: 30px;
            color: #2c3e50;
            text-align: center;
        }

        .input-box {
            width: 100%;
            max-width: 700px;
            margin-bottom: 25px;
        }

        .input-box label {
            display: block;
            font-size: 1.3rem;
            margin-bottom: 10px;
            color: #34495e;
        }

        .text-area {
            width: 400px;
            height: 400px;
            padding: 20px;
            font-size: 1.2rem;
            border: 3px solid #2980b9;
            border-radius: 10px;
            resize: none;
        }

        .form-control {
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            border: 3px solid #2980b9;
            border-radius: 10px;
        }

        .submit-btn {
            padding: 15px 50px;
            background-color: var(--kappel);
            color: #fff;
            border: none;
            border-radius: 10px;
            font-size: 1.3rem;
            cursor: pointer;
            width: 400px;
            max-width: 400px;
            margin-top: 20px;
            text-align: center;
        }

        .submit-btn:hover {
            background-color: #3498db;
        }
        body {
            margin-top: 150px; /* Adjust this value to match the height of your navbar */
        }

    </style>

</head>
<body>
    <div class="create-container">
        <header class="create-header">Ödev Oluştur</header>

        <form asp-action="Create" method="post" enctype="multipart/form-data">>
            <div class="input-box">
                <label for="Başlık">Ödev Adı</label>
                <input asp-for="Başlık" class="form-control" id="Başlık" name="Başlık" required>
                <span asp-validation-for="Başlık" class="text-danger"></span>
            </div>

            <div class="input-box">
                <label for="İçerik">İçerik</label>
                <textarea asp-for="İçerik" class="text-area" id="İçerik" name="İçerik" required></textarea>
                <span asp-validation-for="İçerik" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Hafta"></label>
                <input name="Hafta" class="form-control" type="date" value="@ViewBag.Hafta" />
                <span asp-validation-for="Hafta" class="text-danger"></span>
            </div>


            <div class="input-box">
                <label asp-for="HomeworkFile">Ödev Dosyası</label>
                <input asp-for="HomeworkFile" class="form-control"name="HomeworkFile"id="HomeworkFile" type="file" multiple  />
                <span asp-validation-for="HomeworkFile" class="text-danger"></span>
            </div>

                <div class="input-box">
                <button type="submit" class="submit-btn">Kaydet</button>
            </div>
        </form>

    </div>

   
</body>
</html>
